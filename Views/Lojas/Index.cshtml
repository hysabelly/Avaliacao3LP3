@model List<Avaliacao3LP3.ViewModels.LojasViewModel>

@{
    ViewData["Title"] = "Lojas e Quiosques";
}

<h1>Lojas e Quiosques</h1>

@if(Model.Count == 0)
{
    <p>Não há nenhuma loja ou quiosque cadastrada.</p>
}

else
{
    <ul>
        @foreach(var loja in Model)
        {
            <li>@loja.Nome</li>
            <li>Id: @loja.Id</li>
            <li>Piso: @loja.Piso</li>
            <li>Nome: @loja.Nome</li>
            <li>Descricao: @loja.Descricao</li>
            <li>Modelo: @loja.Modelo</li>
            <li>Email: @loja.Email</li>
        }
    </ul>
}